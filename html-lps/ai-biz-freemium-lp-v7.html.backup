        }
        setInterval(updateCommunityStats, 5000);
        
        // ÂèéÂÖ•„Ç∑„Éü„É•„É¨„Éº„Çø„Éº
        const incomeSlider = document.getElementById('incomeSlider');
        const automationSlider = document.getElementById('automationSlider');
        const currentIncome = document.getElementById('currentIncome');
        const automationRate = document.getElementById('automationRate');
        const futureIncome = document.getElementById('futureIncome');
        
        function updateSimulator() {
            const income = parseInt(incomeSlider.value);
            const automation = parseInt(automationSlider.value);
            
            currentIncome.textContent = `${income}‰∏áÂÜÜ`;
            automationRate.textContent = `${automation}%`;
            
            // Ëá™ÂãïÂåñ„Å´„Çà„ÇãÂèéÂÖ•Â¢óÂä†Ë®àÁÆó
            const multiplier = 1 + (automation / 100) * 2;
            const future = Math.floor(income * multiplier);
            
            futureIncome.textContent = `¬•${(future * 10000).toLocaleString()}`;
        }
        
        incomeSlider.addEventListener('input', updateSimulator);
        automationSlider.addEventListener('input', updateSimulator);
        updateSimulator();
        
        // „Ç´„Ç¶„É≥„Éà„ÉÄ„Ç¶„É≥„Çø„Ç§„Éû„Éº
        function updateCountdown() {
            const endDate = new Date();
            endDate.setDate(endDate.getDate() + 2);
            endDate.setHours(23, 59, 59);
            
            const now = new Date();
            const diff = endDate - now;
            
            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);
            
            document.getElementById('days').textContent = days;
            document.getElementById('hours').textContent = String(hours).padStart(2, '0');
            document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
            document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
            
            // ÊÆã„ÇäÊû†Êï∞„ÇíÂæê„ÄÖ„Å´Ê∏õ„Çâ„Åô
            const spotsLeft = document.getElementById('spotsLeft');
            if (Math.random() < 0.01 && parseInt(spotsLeft.textContent) > 5) {
                spotsLeft.textContent = parseInt(spotsLeft.textContent) - 1;
            }
        }
        setInterval(updateCountdown, 1000);
        updateCountdown();
        
        // AI„ÉÅ„É£„ÉÉ„Éà
        const chatResponses = {
            '„Éó„É≠„Ç∞„É©„Éü„É≥„Ç∞': 'ÂÖ®„ÅèÂøÖË¶Å„ÅÇ„Çä„Åæ„Åõ„ÇìÔºÅ„Éâ„É©„ÉÉ„Ç∞&„Éâ„É≠„ÉÉ„Éó„ÅßË™∞„Åß„ÇÇËá™ÂãïÂåñ„Çí‰Ωú„Çå„Åæ„Åô„ÄÇÂÆüÈöõ„ÄÅÂèóË¨õÁîü„ÅÆ8Ââ≤‰ª•‰∏ä„Åå„Éó„É≠„Ç∞„É©„Éü„É≥„Ç∞Êú™ÁµåÈ®ìËÄÖ„Åß„Åô„ÄÇ',
            'ÂäπÊûú': 'ÊúÄÁü≠2ÈÄ±Èñì„ÅßÊúÄÂàù„ÅÆËá™ÂãïÂåñ„ÅåÂÆåÊàê„Åó„Åæ„Åô„ÄÇÂπ≥Âùá„Åô„Çã„Å®1„É∂Êúà„Åß50ÊôÇÈñì„ÄÅ3„É∂Êúà„ÅßÊúà100ÊôÇÈñì‰ª•‰∏ä„ÅÆÊ•≠ÂãôÂâäÊ∏õ„ÇíÈÅîÊàê„Åó„Å¶„ÅÑ„Åæ„Åô„ÄÇ',
            'Ë≤ªÁî®': '„Éï„É™„Éº„Éó„É©„É≥„ÅØÂÆåÂÖ®ÁÑ°Êñô„ÄÅ„Çπ„Çø„Éº„Çø„Éº„Éó„É©„É≥„ÅØÊúàÈ°ç9,800ÂÜÜ„Åß„Åô„ÄÇÂâäÊ∏õ„Åß„Åç„Çã‰∫∫‰ª∂Ë≤ª„ÇíËÄÉ„Åà„Çã„Å®„ÄÅ„Åª„Å®„Çì„Å©„ÅÆÊñπ„ÅåÂàùÊúà„Åã„ÇâÈªíÂ≠ó„Å´„Å™„Å£„Å¶„ÅÑ„Åæ„Åô„ÄÇ',
            '„Çµ„Éù„Éº„Éà': '24ÊôÇÈñì365Êó•„ÅÆ„ÉÅ„É£„ÉÉ„Éà„Çµ„Éù„Éº„Éà„Å´Âä†„Åà„ÄÅÈÄ±3Âõû„ÅÆ„Ç™„É≥„É©„Ç§„É≥Áõ∏Ë´á‰ºö„ÄÅ1ÂØæ1„ÅÆ„É°„É≥„Çø„Éº„Çµ„Éù„Éº„Éà„ÇÇ„ÅîÁî®ÊÑè„Åó„Å¶„ÅÑ„Åæ„Åô„ÄÇ',
            'ËøîÈáë': '30Êó•Èñì„ÅÆÂÆåÂÖ®ËøîÈáë‰øùË®º„Åå„ÅÇ„Çä„Åæ„Åô„ÄÇÁêÜÁî±„ÅØ‰∏ÄÂàáÂïè„ÅÑ„Åæ„Åõ„Çì„ÄÇ'
        };
        
        function sendMessage() {
            const input = document.getElementById('chatInput');
            const chatBody = document.getElementById('chatBody');
            const message = input.value.trim();
            
            if (!message) return;
            
            // „É¶„Éº„Ç∂„Éº„É°„ÉÉ„Çª„Éº„Ç∏„ÇíËøΩÂä†
            chatBody.innerHTML += `
                <div class="chat-bubble user">
                    <div class="chat-bubble-content">${message}</div>
                </div>
            `;
            
            input.value = '';
            
            // AI„ÅÆËøîÁ≠î„ÇíÁîüÊàê
            setTimeout(() => {
                let response = '„ÅîË≥™Âïè„ÅÇ„Çä„Åå„Å®„ÅÜ„Åî„Åñ„ÅÑ„Åæ„Åô„ÄÇ';
                
                for (const [keyword, answer] of Object.entries(chatResponses)) {
                    if (message.includes(keyword)) {
                        response = answer;
                        break;
                    }
                }
                
                if (response === '„ÅîË≥™Âïè„ÅÇ„Çä„Åå„Å®„ÅÜ„Åî„Åñ„ÅÑ„Åæ„Åô„ÄÇ') {
                    response += '„Çà„ÇäË©≥„Åó„Åè„ÅäÁ≠î„Åà„Åô„Çã„Åü„ÇÅ„ÄÅÁÑ°ÊñôÁõ∏Ë´á„Çí„ÅîÂà©Áî®„Åè„Å†„Åï„ÅÑ„ÄÇÂ∞ÇÈñÄ„Çπ„Çø„ÉÉ„Éï„Åå‰∏ÅÂØß„Å´„ÅîË™¨Êòé„ÅÑ„Åü„Åó„Åæ„Åô„ÄÇ';
                }
                
                chatBody.innerHTML += `
                    <div class="chat-bubble">
                        <div class="chat-bubble-content">${response}</div>
                    </div>
                `;
                
                chatBody.scrollTop = chatBody.scrollHeight;
            }, 1000);
            
            chatBody.scrollTop = chatBody.scrollHeight;
        }
        
        document.getElementById('chatInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
        
        // „Éï„É≠„Éº„ÉÜ„Ç£„É≥„Ç∞„Ç¶„Ç£„Ç∏„Çß„ÉÉ„Éà
        function toggleWidget() {
            const menu = document.getElementById('widgetMenu');
            menu.classList.toggle('active');
        }
        
        // „Çπ„É†„Éº„Çπ„Çπ„ÇØ„É≠„Éº„É´
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // „Ç´„Éº„Éâ„Éõ„Éê„Éº„Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥
        function animateCard(card) {
            const icon = card.querySelector('.demo-icon');
            const benefits = card.querySelectorAll('.benefit-tag');
            
            // „Ç¢„Ç§„Ç≥„É≥„ÇíÂ∞ë„ÅóÂõûËª¢
            if (icon) {
                icon.style.transform = 'rotate(10deg) scale(1.2)';
            }
            
            // „Éô„Éç„Éï„Ç£„ÉÉ„Éà„Çø„Ç∞„Çí„Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥
            benefits.forEach((tag, index) => {
                setTimeout(() => {
                    tag.style.transform = 'scale(1.1)';
                    tag.style.background = 'var(--gradient-primary)';
                    tag.style.color = 'white';
                    tag.style.borderColor = 'transparent';
                }, index * 100);
            });
        }
        
        function resetCard(card) {
            const icon = card.querySelector('.demo-icon');
            const benefits = card.querySelectorAll('.benefit-tag');
            
            if (icon) {
                icon.style.transform = '';
            }
            
            benefits.forEach(tag => {
                tag.style.transform = '';
                tag.style.background = '';
                tag.style.color = '';
                tag.style.borderColor = '';
            });
        }
        
        // „Éó„É≠„Ç∞„É¨„Çπ„Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥Áî®CSS
        const style = document.createElement('style');
        style.textContent = `
            @keyframes progress {
                from { width: 0; }
                to { width: 100%; }
            }
            
            .demo-icon, .benefit-tag {
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            }
            
            .demo-card:hover .demo-badge {
                animation: badge-shake 0.5s ease-in-out;
            }
            
            @keyframes badge-shake {
                0%, 100% { transform: rotate(0deg); }
                25% { transform: rotate(-5deg); }
                75% { transform: rotate(5deg); }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
