            const chatBody = document.getElementById('chatBody');
            const message = input.value.trim();
            
            if (!message) return;
            
            // ユーザーメッセージを追加
            chatBody.innerHTML += `
                <div class="chat-bubble user">
                    <div class="chat-bubble-content">${message}</div>
                </div>
            `;
            
            input.value = '';
            
            // AIの返答を生成
            setTimeout(() => {
                let response = 'ご質問ありがとうございます。';
                
                for (const [keyword, answer] of Object.entries(chatResponses)) {
                    if (message.includes(keyword)) {
                        response = answer;
                        break;
                    }
                }
                
                if (response === 'ご質問ありがとうございます。') {
                    response += 'より詳しくお答えするため、無料相談をご利用ください。専門スタッフが丁寧にご説明いたします。';
                }
                
                chatBody.innerHTML += `
                    <div class="chat-bubble">
                        <div class="chat-bubble-content">${response}</div>
                    </div>
                `;
                
                chatBody.scrollTop = chatBody.scrollHeight;
            }, 1000);
            
            chatBody.scrollTop = chatBody.scrollHeight;
        }
        
        document.getElementById('chatInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
        
        // フローティングウィジェット
        function toggleWidget() {
            const menu = document.getElementById('widgetMenu');
            menu.classList.toggle('active');
        }
        
        // スムーススクロール
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // カードホバーアニメーション
        function animateCard(card) {
            const icon = card.querySelector('.demo-icon');
            const benefits = card.querySelectorAll('.benefit-tag');
            
            // アイコンを少し回転
            if (icon) {
                icon.style.transform = 'rotate(10deg) scale(1.2)';
            }
            
            // ベネフィットタグをアニメーション
            benefits.forEach((tag, index) => {
                setTimeout(() => {
                    tag.style.transform = 'scale(1.1)';
                    tag.style.background = 'var(--gradient-primary)';
                    tag.style.color = 'white';
                    tag.style.borderColor = 'transparent';
                }, index * 100);
            });
        }
        
        function resetCard(card) {
            const icon = card.querySelector('.demo-icon');
            const benefits = card.querySelectorAll('.benefit-tag');
            
            if (icon) {
                icon.style.transform = '';
            }
            
            benefits.forEach(tag => {
                tag.style.transform = '';
                tag.style.background = '';
                tag.style.color = '';
                tag.style.borderColor = '';
            });
        }
        
        // プログレスアニメーション用CSS
        const style = document.createElement('style');
        style.textContent = `
            @keyframes progress {
                from { width: 0; }
                to { width: 100%; }
            }
            
            .demo-icon, .benefit-tag {
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            }
            
            .demo-card:hover .demo-badge {
                animation: badge-shake 0.5s ease-in-out;
            }
            
            @keyframes badge-shake {
                0%, 100% { transform: rotate(0deg); }
                25% { transform: rotate(-5deg); }
                75% { transform: rotate(5deg); }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>