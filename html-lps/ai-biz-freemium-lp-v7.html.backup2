                // プログレスバー更新
                const progress = ((30 - timeLeft) / 30) * 100;
                document.getElementById('progressFill').style.width = progress + '%';
                
                if (timeLeft <= 0) {
                    clearInterval(demoTimer);
                }
            }, 1000);
            
            // 10シーンを3秒間隔で実行
            const scenes = [
                { step: 1, action: () => {} }, // タイトル画面は既に表示
                { step: 2, action: () => {} }, // 投稿内容入力開始
                { step: 3, action: () => typeText(demoData.text) }, // テキスト入力中
                { step: 4, action: () => animatePlatforms() }, // プラットフォーム選択
