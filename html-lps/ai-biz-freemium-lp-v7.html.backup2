            const element = document.getElementById('typingText');
            element.innerHTML = '';
            let index = 0;
            
            const typeInterval = setInterval(() => {
                if (index < text.length) {
                    element.innerHTML += text[index];
                    index++;
                } else {
                    clearInterval(typeInterval);
                }
            }, 50);
        }
        
